@model IEnumerable<TrashCollector.Models.Customer>

<h2>Index</h2>

@if (User.IsInRole("Customer"))
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zipcode)
            </th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email Address</th>
            <th>Street Address 1 </th>
            <th>Street Address 2</th>
            <th>Pickup Day</th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.City.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State.Abbreviation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Zipcode.Zip)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StreetAddress1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StreetAddress2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PickupDay.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.CustomerId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.CustomerId })
                </td>
            </tr>
        }
    </table>

}
@if (User.IsInRole("Employee"))
{
    <br /><br />
    using (Html.BeginForm("Index", "Customers", FormMethod.Get))
    {
        @Html.TextBox("searching")<input type="submit" value="Search" />
    }

    using (Html.BeginForm("Pickups", "Employees", FormMethod.Get))
    {
        <div class="form-group">
            <div class="col-md-2">
                @Html.DropDownList("PickupDayId", null, htmlAttributes: new { @class = "form-control" })
            </div>

            <div class="form-group">
                <div class="col-md-2">
                    <input type="submit" value="Pickups" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.City)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.State)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Zipcode)
                </th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email Address</th>
                <th>Street Address 1 </th>
                <th>Street Address 2</th>
                <th>Pickup Day</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="3" style="color: red">
                        No Match Any Document
                    </td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.City.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.State.Abbreviation)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Zipcode.Zip)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmailAddress)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StreetAddress1)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StreetAddress2)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PickupDay.Name)
                        </td>
                        <td>
                            @Html.ActionLink("Details", "Details", new { id = item.CustomerId })
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
}



